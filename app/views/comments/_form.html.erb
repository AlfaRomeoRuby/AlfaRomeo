<% if user_signed_in? %>
<%= form_for([@gallery, @gallery.comments.build]) do |f| %>
<div class="comment-inputs form-group">
  <h3>Dodaj komentarz:</h3>
  <%= f.text_area :content, :class=>'form-control', rows: 4, :placeholder=>'Treść komentarza...' %>
  <%= f.submit "Wyślij", :class=>'btn btn-success' %>
  </div>
  <% end %>

  <% else %>
  <div class="comment-error">
    <p class="text-danger text-center">
      Musisz być zalogowany, aby dodać komentarz!
    </p>
  </div>


<% end %>
