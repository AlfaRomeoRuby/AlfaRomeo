<% @page_title = @article.name %>
<section id="content">
    <div class="container">
      <% if !flash[:success].blank? %>
      <div class="alert alert-success text-center">
        <%= flash[:success] %>
      </div>
      <% end %>
        <h2><%= @article.name %></h2>
        <div class="article">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-0 col-md-4 col-md-offset-0 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
                    <%= image_tag(@article.photo.url, :class => 'img-responsive img-thumbnail') %>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <p><%= raw(@article.content) %></p>
                    <hr/>
                </div>
            </div>
        </div>
        <hr />
        <%= render partial: "comments/comments", locals: {commentable: @article} %>
        <%= render partial: "comments/form", locals: {commentable: @article} %>
        <hr />
        <p><%= link_to("wstecz", {:controller => 'public', :action => 'index'}, :class => 'btn btn-info') %>
        </p>
    </div>
</section>
